<section class="content content-area">

  {% include 'breadcrumbs' %}

  <div class="page-title">
    <span class="label">Collections</span>
  </div>

  <section class="collections">
    {% for collection in collections %}<div class="collection-wrap first">

        {% if collection.image %}
          {% assign imgSrc = collection.image.src | collection_img_url: 'large' %}
        {% else %}
          {% assign imgSrc = collection.products.first.featured_image | product_img_url: 'large' %}
        {% endif %}

        <div class="collection" style="background-image:url({{ imgSrc }});">
          <a href="{{ collection.url }}">
            <h2 class="label preload">{{ collection.title }}</h2>
            <h2 class="browse">Browse</h2>
          </a>
        </div>
        <div class="rte">
          {{ collection.description }}
        </div>
      </div>{% endfor %}
  </section>

</section>