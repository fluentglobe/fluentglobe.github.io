{% if settings.show-slideshow %}
<!-- Slideshow
============================================= -->
<section class="slideshow clearfix">
  {% if settings.show-slide-1 %}
    <div class="slide {% if settings.invert-controls-slide-1 %}invert{% endif %}">
      <div class="image-wrap">
        <span class="prev"><span class="icon">[</span></span>
        <span class="next"><span class="icon">]</span></span>
        <ul class="jump-to-slide"></ul>
        <img src="{{ 'slide-image-1.jpg' | asset_url }}">
      </div>
      {% if settings.show-slide-content-1 %}
      <div class="content-outer-wrap">
        <a class  ="mobile-link" href="{{ settings.slide-link-1 }}"></a>
        <div class="content-inner-wrap">
          <div class="content {{ settings.slide-position-1 }}">
            {% if settings.slide-title-1.size > 0 %}<h2 class="title">{{ settings.slide-title-1 }}</h2>{% endif %}
            {% if settings.slide-tagline-1.size > 0 %}<h3 class="tagline">{{ settings.slide-tagline-1 }}</h3>{% endif %}
            {% if settings.slide-button-1.size > 0 %}<a class="call-to-action" href="{{ settings.slide-link-1 }}">{{ settings.slide-button-1 }} <span class="arrow">></span></a>{% endif %}
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  {% endif %}
